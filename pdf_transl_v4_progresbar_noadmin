#!/usr/bin/env python3
"""
AutoCAD PDF Translator - Clean Version
–ë–∞–∑–∏—Ä–∞–Ω –Ω–∞ —Ä–∞–±–æ—Ç–µ—â –∫–æ–¥ —Å –¥–æ–±–∞–≤–µ–Ω–∏ —Ñ—É–Ω–∫—Ü–∏–∏ –∑–∞ –∏–∑–±–æ—Ä –Ω–∞ –µ–∑–∏—Ü–∏ –∏ —Å—Ç—Ä–∞–Ω–∏—Ü–∏
"""
import fitz  # PyMuPDF
from deep_translator import GoogleTranslator
import pytesseract
from pdf2image import convert_from_path
from PIL import Image, ImageFilter, ImageEnhance
import time
import os
import sys
import io
from tkinter import Tk, filedialog
from concurrent.futures import ThreadPoolExecutor, as_completed
try:
    from tqdm import tqdm
    TQDM_AVAILABLE = True
except ImportError:
    TQDM_AVAILABLE = False
    print("‚ö†Ô∏è  tqdm –Ω–µ –µ –∏–Ω—Å—Ç–∞–ª–∏—Ä–∞–Ω. –ò–Ω—Å—Ç–∞–ª–∏—Ä–∞–π—Ç–µ —Å: pip install tqdm")

# ============================================================================
# –ê–í–¢–û–ú–ê–¢–ò–ß–ù–û –ù–ê–ú–ò–†–ê–ù–ï –ù–ê TESSERACT –ò POPPLER –í –õ–û–ö–ê–õ–ù–ê–¢–ê –ü–ê–ü–ö–ê
# ============================================================================

def setup_local_paths():
    """–ù–∞—Å—Ç—Ä–æ–π–∫–∞ –Ω–∞ –ª–æ–∫–∞–ª–Ω–∏ –ø—ä—Ç–∏—â–∞ –∑–∞ Tesseract –∏ Poppler"""
    
    # –¢–µ–∫—É—â–∞ –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è –Ω–∞ —Å–∫—Ä–∏–ø—Ç–∞
    script_dir = os.path.dirname(os.path.abspath(__file__))
    
    tesseract_found = False
    poppler_found = False
    
    # –¢—ä—Ä—Å–µ–Ω–µ –Ω–∞ Tesseract
    tesseract_paths = [
        os.path.join(script_dir, 'tesseract', 'tesseract.exe'),
        os.path.join(script_dir, 'Tesseract-OCR', 'tesseract.exe'),
        os.path.join(script_dir, 'tesseract-ocr', 'tesseract.exe'),
    ]
    
    for tess_path in tesseract_paths:
        if os.path.exists(tess_path):
            pytesseract.pytesseract.tesseract_cmd = tess_path
            print(f"‚úÖ Tesseract –Ω–∞–º–µ—Ä–µ–Ω: {tess_path}")
            tesseract_found = True
            break
    
    if not tesseract_found:
        print("‚ö†Ô∏è  Tesseract –Ω–µ –µ –Ω–∞–º–µ—Ä–µ–Ω –≤ –ª–æ–∫–∞–ª–Ω–∞—Ç–∞ –ø–∞–ø–∫–∞")
        choice = input("   –ò—Å–∫–∞—Ç–µ –ª–∏ –¥–∞ –∏–∑–±–µ—Ä–µ—Ç–µ Tesseract —Ä—ä—á–Ω–æ? (y/n): ").strip().lower()
        if choice == 'y':
            tess_path = select_tesseract()
            if tess_path:
                pytesseract.pytesseract.tesseract_cmd = tess_path
                print(f"‚úÖ Tesseract –∏–∑–±—Ä–∞–Ω: {tess_path}")
                tesseract_found = True
    
    # –¢—ä—Ä—Å–µ–Ω–µ –Ω–∞ Poppler
    poppler_paths = [
        os.path.join(script_dir, 'poppler', 'Library', 'bin'),
        os.path.join(script_dir, 'poppler', 'bin'),
        os.path.join(script_dir, 'poppler-windows', 'Library', 'bin'),
    ]
    
    poppler_path = None
    for pop_path in poppler_paths:
        if os.path.exists(pop_path):
            poppler_path = pop_path
            print(f"‚úÖ Poppler –Ω–∞–º–µ—Ä–µ–Ω: {pop_path}")
            poppler_found = True
            break
    
    if not poppler_found:
        print("‚ö†Ô∏è  Poppler –Ω–µ –µ –Ω–∞–º–µ—Ä–µ–Ω –≤ –ª–æ–∫–∞–ª–Ω–∞—Ç–∞ –ø–∞–ø–∫–∞")
        choice = input("   –ò—Å–∫–∞—Ç–µ –ª–∏ –¥–∞ –∏–∑–±–µ—Ä–µ—Ç–µ Poppler –ø–∞–ø–∫–∞ —Ä—ä—á–Ω–æ? (y/n): ").strip().lower()
        if choice == 'y':
            poppler_path = select_poppler()
            if poppler_path:
                print(f"‚úÖ Poppler –∏–∑–±—Ä–∞–Ω: {poppler_path}")
                poppler_found = True
    
    return poppler_path


def select_tesseract():
    """–ò–∑–±–æ—Ä –Ω–∞ Tesseract —á—Ä–µ–∑ file dialog"""
    print("\nüìÇ –ò–∑–±–µ—Ä–µ—Ç–µ tesseract.exe —Ñ–∞–π–ª...")
    try:
        root = Tk()
        root.withdraw()  # –°–∫—Ä–∏–≤–∞–Ω–µ –Ω–∞ –≥–ª–∞–≤–Ω–∏—è –ø—Ä–æ–∑–æ—Ä–µ—Ü
        root.attributes('-topmost', True)  # –ù–∞ –ø—Ä–µ–¥–µ–Ω –ø–ª–∞–Ω
        
        file_path = filedialog.askopenfilename(
            title="–ò–∑–±–µ—Ä–µ—Ç–µ tesseract.exe",
            filetypes=[("Executable files", "*.exe"), ("All files", "*.*")],
            initialdir="C:/Program Files"
        )
        
        root.destroy()
        
        if file_path and os.path.exists(file_path):
            return file_path
        else:
            print("‚ùå –ù–µ –µ –∏–∑–±—Ä–∞–Ω –≤–∞–ª–∏–¥–µ–Ω —Ñ–∞–π–ª")
            return None
    except Exception as e:
        print(f"‚ùå –ì—Ä–µ—à–∫–∞ –ø—Ä–∏ –∏–∑–±–æ—Ä –Ω–∞ —Ñ–∞–π–ª: {e}")
        return None


def select_poppler():
    """–ò–∑–±–æ—Ä –Ω–∞ Poppler bin –ø–∞–ø–∫–∞ —á—Ä–µ–∑ file dialog"""
    print("\nüìÇ –ò–∑–±–µ—Ä–µ—Ç–µ Poppler bin –ø–∞–ø–∫–∞ (–∫—ä–¥–µ—Ç–æ —Å–∞ pdfinfo.exe, pdftoppm.exe –∏ –¥—Ä.)...")
    try:
        root = Tk()
        root.withdraw()
        root.attributes('-topmost', True)
        
        folder_path = filedialog.askdirectory(
            title="–ò–∑–±–µ—Ä–µ—Ç–µ Poppler bin –ø–∞–ø–∫–∞",
            initialdir="C:/"
        )
        
        root.destroy()
        
        if folder_path and os.path.exists(folder_path):
            # –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–∞–ª–∏ –ø–∞–ø–∫–∞—Ç–∞ —Å—ä–¥—ä—Ä–∂–∞ –Ω–µ–æ–±—Ö–æ–¥–∏–º–∏—Ç–µ —Ñ–∞–π–ª–æ–≤–µ
            required_files = ['pdfinfo.exe', 'pdftoppm.exe']
            has_files = any(os.path.exists(os.path.join(folder_path, f)) for f in required_files)
            
            if has_files:
                return folder_path
            else:
                print("‚ö†Ô∏è  –ò–∑–±—Ä–∞–Ω–∞—Ç–∞ –ø–∞–ø–∫–∞ –Ω–µ —Å—ä–¥—ä—Ä–∂–∞ Poppler —Ñ–∞–π–ª–æ–≤–µ")
                print("   –¢—ä—Ä—Å–µ–Ω–∏ —Ñ–∞–π–ª–æ–≤–µ: pdfinfo.exe, pdftoppm.exe")
                return None
        else:
            print("‚ùå –ù–µ –µ –∏–∑–±—Ä–∞–Ω–∞ –≤–∞–ª–∏–¥–Ω–∞ –ø–∞–ø–∫–∞")
            return None
    except Exception as e:
        print(f"‚ùå –ì—Ä–µ—à–∫–∞ –ø—Ä–∏ –∏–∑–±–æ—Ä –Ω–∞ –ø–∞–ø–∫–∞: {e}")
        return None


class AutoCADPDFTranslator:
    def __init__(self, source_lang='bg', target_lang='en', poppler_path=None):
        self.source_lang = source_lang
        self.target_lang = target_lang
        self.cache = {}
        self.poppler_path = poppler_path
        
        # –ü—ä—Ç –∫—ä–º Arial —à—Ä–∏—Ñ—Ç –∑–∞ –∫–∏—Ä–∏–ª–∏—Ü–∞ (Windows)
        self.font_path = "C:/Windows/Fonts/arial.ttf"
        if not os.path.exists(self.font_path):
            # –û–ø–∏—Ç–≤–∞–º–µ –¥—Ä—É–≥–∏ –ø—ä—Ç–∏—â–∞
            alt_paths = [
                "C:/Windows/Fonts/ArialUni.ttf",
                "/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf",  # Linux
                "/System/Library/Fonts/Supplemental/Arial.ttf"  # macOS
            ]
            for path in alt_paths:
                if os.path.exists(path):
                    self.font_path = path
                    break
            else:
                self.font_path = None
        
    def translate_text(self, text):
        """–ü—Ä–µ–≤–æ–¥ –Ω–∞ —Ç–µ–∫—Å—Ç —Å –∫–µ—à–∏—Ä–∞–Ω–µ"""
        if not text or len(text.strip()) < 2:
            return text
        
        text = text.strip()
        
        # –ü—Ä–æ–ø—É—Å–∫–∞–Ω–µ –Ω–∞ —á–∏—Å–ª–∞ –∏ —Å–∏–º–≤–æ–ª–∏
        if text.replace('.', '').replace(',', '').replace('-', '').replace('/', '').isdigit():
            return text
        
        if text in self.cache:
            return self.cache[text]
        
        try:
            time.sleep(0.1)
            translated = GoogleTranslator(source=self.source_lang, target=self.target_lang).translate(text)
            if translated:
                self.cache[text] = translated
                print(f"  ‚úì {text[:40]} ‚Üí {translated[:40]}")
                return translated
            return text
        except Exception:
            return text

    def translate_batch(self, texts):
        """–ü–∞—Ä–∞–ª–µ–ª–µ–Ω –ø—Ä–µ–≤–æ–¥ –Ω–∞ —Å–ø–∏—Å—ä–∫ –æ—Ç —Ç–µ–∫—Å—Ç–æ–≤–µ —Å –ø—Ä–æ–≥—Ä–µ—Å –±–∞—Ä"""
        # –§–∏–ª—Ç—Ä–∏—Ä–∞–º–µ —Å–∞–º–æ —Ç–µ–∑–∏, –∫–æ–∏—Ç–æ —Ç—Ä—è–±–≤–∞ –¥–∞ —Å–µ –ø—Ä–µ–≤–µ–∂–¥–∞—Ç
        to_translate = []
        for t in texts:
            t = t.strip()
            if not t or len(t) < 2:
                continue
            if t.replace('.','').replace(',','').replace('-','').replace('/','').isdigit():
                continue
            if t not in self.cache:
                to_translate.append(t)

        if not to_translate:
            return

        print(f"  üîÑ –ü–∞—Ä–∞–ª–µ–ª–µ–Ω –ø—Ä–µ–≤–æ–¥ –Ω–∞ {len(to_translate)} —Ñ—Ä–∞–∑–∏...")

        def translate_one(text):
            try:
                time.sleep(0.1)
                result = GoogleTranslator(
                    source=self.source_lang,
                    target=self.target_lang
                ).translate(text)
                return text, result if result else text
            except Exception:
                return text, text

        # –ú–∞–∫—Å–∏–º—É–º 5 –ø–∞—Ä–∞–ª–µ–ª–Ω–∏ –∑–∞—è–≤–∫–∏ - –ø–æ–≤–µ—á–µ —Ä–∏—Å–∫—É–≤–∞ –±–ª–æ–∫–∏—Ä–∞–Ω–µ –æ—Ç Google
        with ThreadPoolExecutor(max_workers=5) as executor:
            futures = {executor.submit(translate_one, t): t for t in to_translate}
            
            if TQDM_AVAILABLE:
                pbar = tqdm(total=len(futures), desc="  –ü—Ä–µ–≤–æ–¥", unit="—Ñ—Ä–∞–∑–∞",
                           bar_format="{l_bar}{bar}| {n_fmt}/{total_fmt} [{elapsed}<{remaining}]")
            
            for future in as_completed(futures):
                original, translated = future.result()
                if translated and translated != original:
                    self.cache[original] = translated
                if TQDM_AVAILABLE:
                    pbar.update(1)
                    pbar.set_postfix_str(original[:25])
            
            if TQDM_AVAILABLE:
                pbar.close()

    def fit_fontsize(self, text, bbox, orig_fontsize, page_rotation):
        """–ù–∞–º–∏—Ä–∞ –º–∞–∫—Å–∏–º–∞–ª–Ω–∏—è —Ä–∞–∑–º–µ—Ä –Ω–∞ —à—Ä–∏—Ñ—Ç–∞, —Å –∫–æ–π—Ç–æ —Ç–µ–∫—Å—Ç—ä—Ç —Å–µ —Å—ä–±–∏—Ä–∞ –≤ bbox"""
        # –ü—Ä–∏ –∑–∞–≤—ä—Ä—Ç—è–Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–∞ —à–∏—Ä–∏–Ω–∞—Ç–∞ –∏ –≤–∏—Å–æ—á–∏–Ω–∞—Ç–∞ —Å–∞ —Ä–∞–∑–º–µ–Ω–µ–Ω–∏
        if page_rotation in (90, 270):
            available_width = bbox[3] - bbox[1]   # –≤–∏–∑—É–∞–ª–Ω–∞ —à–∏—Ä–∏–Ω–∞ = Y —Ä–∞–∑–º–µ—Ä –Ω–∞ bbox
        else:
            available_width = bbox[2] - bbox[0]   # –Ω–æ—Ä–º–∞–ª–Ω–∞ —à–∏—Ä–∏–Ω–∞ = X —Ä–∞–∑–º–µ—Ä –Ω–∞ bbox

        if available_width <= 0:
            return orig_fontsize

        # –ò–∑–º–µ—Ä–≤–∞–º–µ —à–∏—Ä–∏–Ω–∞—Ç–∞ –Ω–∞ —Ç–µ–∫—Å—Ç–∞ –ø—Ä–∏ –æ—Ä–∏–≥–∏–Ω–∞–ª–Ω–∏—è —Ä–∞–∑–º–µ—Ä
        # fitz.get_text_length –µ –±—ä—Ä–∑–∞ —Ñ—É–Ω–∫—Ü–∏—è –±–µ–∑ –Ω—É–∂–¥–∞ –æ—Ç —Å—Ç—Ä–∞–Ω–∏—Ü–∞
        font_name = "helv"  # –≤–≥—Ä–∞–¥–µ–Ω–∏—è helvetica –∑–∞ –∏–∑–º–µ—Ä–≤–∞–Ω–µ
        text_width = fitz.get_text_length(text, fontname=font_name, fontsize=orig_fontsize)

        if text_width <= available_width:
            return orig_fontsize  # —Å—ä–±–∏—Ä–∞ —Å–µ - –Ω—è–º–∞ –Ω—É–∂–¥–∞ –æ—Ç –Ω–∞–º–∞–ª—è–≤–∞–Ω–µ

        # –ù–∞–º–∞–ª—è–≤–∞–º–µ –ø—Ä–æ–ø–æ—Ä—Ü–∏–æ–Ω–∞–ª–Ω–æ
        fitted = orig_fontsize * (available_width / text_width) * 0.95
        # –ú–∏–Ω–∏–º–∞–ª–µ–Ω —Ä–∞–∑–º–µ—Ä - –ø–æ–¥ 4pt –Ω–µ —Å–µ —á–µ—Ç–µ
        return max(fitted, 4.0)
    
    def detect_text_method(self, pdf_path):
        """–û–ø—Ä–µ–¥–µ–ª—è –¥–∞–ª–∏ PDF –∏–º–∞ —Ç–µ–∫—Å—Ç–æ–≤ —Å–ª–æ–π"""
        try:
            doc = fitz.open(pdf_path)
            page = doc[0]
            text = page.get_text()
            doc.close()
            return len(text.strip()) > 50
        except:
            return False
    
    def translate_pdf_with_text_layer(self, input_path, output_path, pages_to_process=None):
        """–ü—Ä–µ–≤–æ–¥ –Ω–∞ PDF —Å —Ç–µ–∫—Å—Ç–æ–≤ —Å–ª–æ–π"""
        print("\nüìù –û–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞ —Ç–µ–∫—Å—Ç–æ–≤ —Å–ª–æ–π...")
        
        try:
            doc = fitz.open(input_path)
            total_pages = len(doc)
            target_pages = list(pages_to_process) if pages_to_process else list(range(total_pages))

            # –ü—Ä–æ–≥—Ä–µ—Å –±–∞—Ä –∑–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–∏—Ç–µ
            pages_iter = tqdm(target_pages, desc="–°—Ç—Ä–∞–Ω–∏—Ü–∏", unit="—Å—Ç—Ä") if TQDM_AVAILABLE else target_pages
            
            for page_num in pages_iter:
                if page_num >= total_pages:
                    continue
                
                page = doc[page_num]
                page_rotation = page.rotation
                text_instances = page.get_text("dict", flags=11)

                # –°—Ç—ä–ø–∫–∞ 1: —Å—ä–±–∏—Ä–∞–º–µ –≤—Å–∏—á–∫–∏ —É–Ω–∏–∫–∞–ª–Ω–∏ —Ç–µ–∫—Å—Ç–æ–≤–µ –æ—Ç —Å—Ç—Ä–∞–Ω–∏—Ü–∞—Ç–∞
                all_texts = []
                for block in text_instances["blocks"]:
                    if block["type"] == 0:
                        for line in block["lines"]:
                            for span in line["spans"]:
                                t = span["text"].strip()
                                if t and len(t) >= 2:
                                    all_texts.append(t)

                if TQDM_AVAILABLE:
                    pages_iter.set_postfix_str(f"—Å—Ç—Ä.{page_num+1}: {len(all_texts)} —Ñ—Ä–∞–∑–∏")

                # –°—Ç—ä–ø–∫–∞ 2: –ø—Ä–µ–≤–µ–∂–¥–∞–º–µ –ø–∞—Ä–∞–ª–µ–ª–Ω–æ –≤—Å–∏—á–∫–∏ –Ω–∞–≤–µ–¥–Ω—ä–∂
                self.translate_batch(all_texts)

                # –°—Ç—ä–ø–∫–∞ 3: –Ω–∞–Ω–∞—Å—è–º–µ –ø—Ä–µ–≤–æ–¥–∏—Ç–µ –≤—ä—Ä—Ö—É —Å—Ç—Ä–∞–Ω–∏—Ü–∞—Ç–∞
                all_spans = [
                    span
                    for block in text_instances["blocks"] if block["type"] == 0
                    for line in block["lines"]
                    for span in line["spans"]
                    if span["text"].strip() and len(span["text"].strip()) >= 2
                ]

                spans_iter = tqdm(all_spans, desc="  –ù–∞–Ω–∞—Å—è–Ω–µ", unit="span", leave=False,
                                 bar_format="{l_bar}{bar}| {n_fmt}/{total_fmt}") if TQDM_AVAILABLE else all_spans

                for span in spans_iter:
                    original = span["text"].strip()
                    translated = self.cache.get(original, original)
                    
                    if translated != original:
                        bbox = list(span["bbox"])
                        rect = fitz.Rect(bbox)
                        page.draw_rect(rect, color=(1, 1, 1), fill=(1, 1, 1))

                        # –£–º–Ω–æ –º–∞—â–∞–±–∏—Ä–∞–Ω–µ - —Ç–µ–∫—Å—Ç—ä—Ç –¥–∞ —Å–µ —Å—ä–±–µ—Ä–µ –≤ bbox
                        new_fontsize = self.fit_fontsize(
                            translated, bbox, span["size"], page_rotation
                        )

                        # –ù–∞—á–∞–ª–Ω–∞—Ç–∞ —Ç–æ—á–∫–∞ –∑–∞–≤–∏—Å–∏ –æ—Ç —Ä–æ—Ç–∞—Ü–∏—è—Ç–∞ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü–∞—Ç–∞
                        if page_rotation == 270:
                            insert_pt = (bbox[0], bbox[1])
                            insert_rotate = 270
                        elif page_rotation == 90:
                            insert_pt = (bbox[2], bbox[3])
                            insert_rotate = 90
                        elif page_rotation == 180:
                            insert_pt = (bbox[2], bbox[3] - 2)
                            insert_rotate = 180
                        else:
                            insert_pt = (bbox[0], bbox[3] - 2)
                            insert_rotate = 0

                        page.insert_text(
                            insert_pt,
                            translated,
                            fontsize=new_fontsize,
                            color=(0, 0, 0),
                            fontname="arial",
                            fontfile=self.font_path,
                            rotate=insert_rotate
                        )
            
            doc.save(output_path, garbage=4, deflate=True)
            doc.close()
            return True
            
        except Exception as e:
            print(f"–ì—Ä–µ—à–∫–∞ –ø—Ä–∏ –∑–∞–ø–∏—Å: {e}")
            return False
    
    def preprocess_image_for_ocr(self, image):
        """–ü—Ä–µ–¥–æ–±—Ä–∞–±–æ—Ç–∫–∞ –Ω–∞ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∑–∞ –ø–æ-–¥–æ–±—Ä–æ OCR —Ä–∞–∑–ø–æ–∑–Ω–∞–≤–∞–Ω–µ"""
        # –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä–∞–º–µ –≤ grayscale
        image = image.convert('L')
        # –£–≤–µ–ª–∏—á–∞–≤–∞–º–µ –∫–æ–Ω—Ç—Ä–∞—Å—Ç–∞
        enhancer = ImageEnhance.Contrast(image)
        image = enhancer.enhance(2.0)
        # –õ–µ–∫–æ –∏–∑–æ—Å—Ç—Ä—è–Ω–µ
        image = image.filter(ImageFilter.SHARPEN)
        return image

    def group_ocr_words_into_lines(self, data, scale_x, scale_y, conf_threshold=50):
        """–ì—Ä—É–ø–∏—Ä–∞ OCR –¥—É–º–∏ –≤ —Ä–µ–¥–æ–≤–µ –∑–∞ –ø–æ-–¥–æ–±—ä—Ä –∫–æ–Ω—Ç–µ–∫—Å—Ç –ø—Ä–∏ –ø—Ä–µ–≤–æ–¥"""
        lines = {}
        for j in range(len(data['text'])):
            txt = data['text'][j].strip()
            if not txt or int(data['conf'][j]) < conf_threshold:
                continue
            
            # –ö–ª—é—á –∑–∞ —Ä–µ–¥–∞: block_num + par_num + line_num
            line_key = (data['block_num'][j], data['par_num'][j], data['line_num'][j])
            
            if line_key not in lines:
                lines[line_key] = {'words': [], 'boxes': []}
            
            x0 = data['left'][j] * scale_x
            y0 = data['top'][j] * scale_y
            x1 = (data['left'][j] + data['width'][j]) * scale_x
            y1 = (data['top'][j] + data['height'][j]) * scale_y
            
            lines[line_key]['words'].append(txt)
            lines[line_key]['boxes'].append((x0, y0, x1, y1))
        
        # –°–≥–ª–æ–±—è–≤–∞–º–µ —Ä–µ–¥–æ–≤–µ—Ç–µ
        result = []
        for line_key, line_data in lines.items():
            if not line_data['words']:
                continue
            full_text = ' '.join(line_data['words'])
            # bbox –Ω–∞ —Ü–µ–ª–∏—è —Ä–µ–¥ = –æ–±—Ö–≤–∞—â–∞—â –ø—Ä–∞–≤–æ—ä–≥—ä–ª–Ω–∏–∫
            all_x0 = min(b[0] for b in line_data['boxes'])
            all_y0 = min(b[1] for b in line_data['boxes'])
            all_x1 = max(b[2] for b in line_data['boxes'])
            all_y1 = max(b[3] for b in line_data['boxes'])
            result.append((full_text, all_x0, all_y0, all_x1, all_y1))
        
        return result

    def translate_pdf_with_ocr(self, input_path, output_path, pages_to_process=None):
        """–ü—Ä–µ–≤–æ–¥ –Ω–∞ —Å–∫–∞–Ω–∏—Ä–∞–Ω PDF —Å OCR - –ø–æ–¥–æ–±—Ä–µ–Ω–∞ –≤–µ—Ä—Å–∏—è"""
        print("\nüîç OCR –æ–±—Ä–∞–±–æ—Ç–∫–∞...")
        
        try:
            first = pages_to_process[0] + 1 if pages_to_process else None
            last = pages_to_process[-1] + 1 if pages_to_process else None
            
            if self.poppler_path:
                images = convert_from_path(input_path, dpi=300, first_page=first, last_page=last, poppler_path=self.poppler_path)
            else:
                images = convert_from_path(input_path, dpi=300, first_page=first, last_page=last)
            
            original_doc = fitz.open(input_path)
            new_doc = fitz.open()
            
            # –û–ø—Ä–µ–¥–µ–ª—è–Ω–µ –∫–æ–π OCR –µ–∑–∏–∫ –¥–∞ —Å–µ –∏–∑–ø–æ–ª–∑–≤–∞
            ocr_lang = 'bul+eng' if self.source_lang == 'bg' else 'eng'
            
            # OCR –∫–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è –∑–∞ –ø–æ-–¥–æ–±—Ä–∏ —Ä–µ–∑—É–ª—Ç–∞—Ç–∏
            ocr_config = r'--oem 3 --psm 6'
            
            images_iter = tqdm(enumerate(images), total=len(images),
                              desc="OCR —Å—Ç—Ä–∞–Ω–∏—Ü–∏", unit="—Å—Ç—Ä") if TQDM_AVAILABLE else enumerate(images)
            
            for i, image in images_iter:
                curr_page_num = pages_to_process[i] if pages_to_process else i
                
                if TQDM_AVAILABLE:
                    images_iter.set_postfix_str(f"—Å—Ç—Ä.{curr_page_num+1}")
                else:
                    print(f"OCR –°—Ç—Ä–∞–Ω–∏—Ü–∞ {curr_page_num + 1}")
                
                # –ü—Ä–µ–¥–æ–±—Ä–∞–±–æ—Ç–∫–∞ –∑–∞ –ø–æ-–¥–æ–±—Ä–æ —Ä–∞–∑–ø–æ–∑–Ω–∞–≤–∞–Ω–µ
                processed_image = self.preprocess_image_for_ocr(image)
                
                orig_page = original_doc[curr_page_num]
                page_rect = orig_page.rect
                new_page = new_doc.new_page(width=page_rect.width, height=page_rect.height)
                
                # –í–≥—Ä–∞–∂–¥–∞–º–µ –æ—Ä–∏–≥–∏–Ω–∞–ª–Ω–æ—Ç–æ (–Ω–µ –ø—Ä–µ–¥–æ–±—Ä–∞–±–æ—Ç–µ–Ω–æ—Ç–æ) –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                img_bytes = io.BytesIO()
                image.save(img_bytes, format='PNG')
                new_page.insert_image(page_rect, stream=img_bytes.getvalue())
                
                scale_x = page_rect.width / image.width
                scale_y = page_rect.height / image.height
                
                # OCR –≤—ä—Ä—Ö—É –ø—Ä–µ–¥–æ–±—Ä–∞–±–æ—Ç–µ–Ω–æ—Ç–æ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                data = pytesseract.image_to_data(
                    processed_image, lang=ocr_lang,
                    config=ocr_config,
                    output_type=pytesseract.Output.DICT
                )
                
                # –ì—Ä—É–ø–∏—Ä–∞–º–µ –¥—É–º–∏—Ç–µ –≤ —Ä–µ–¥–æ–≤–µ –∑–∞ –ø–æ-–¥–æ–±—ä—Ä –ø—Ä–µ–≤–æ–¥
                lines = self.group_ocr_words_into_lines(data, scale_x, scale_y, conf_threshold=50)
                
                # –ü–∞—Ä–∞–ª–µ–ª–µ–Ω –ø—Ä–µ–≤–æ–¥ –Ω–∞ –≤—Å–∏—á–∫–∏ —Ä–µ–¥–æ–≤–µ
                all_line_texts = [line[0] for line in lines]
                self.translate_batch(all_line_texts)
                
                # –ù–∞–Ω–∞—Å—è–º–µ –ø—Ä–µ–≤–æ–¥–∏—Ç–µ
                lines_iter = tqdm(lines, desc="  –ù–∞–Ω–∞—Å—è–Ω–µ", unit="—Ä–µ–¥", leave=False) if TQDM_AVAILABLE else lines
                
                for (txt, x0, y0, x1, y1) in lines_iter:
                    translated = self.cache.get(txt, txt)
                    if translated != txt:
                        new_page.draw_rect(fitz.Rect(x0, y0, x1, y1), color=(1, 1, 1), fill=(1, 1, 1))
                        fs = self.fit_fontsize(translated, [x0, y0, x1, y1], (y1 - y0) * 0.8, 0)
                        new_page.insert_text(
                            (x0, y1 - 2),
                            translated,
                            fontsize=fs,
                            color=(0, 0, 0),
                            fontname="arial",
                            fontfile=self.font_path
                        )
            
            original_doc.close()
            new_doc.save(output_path, garbage=4, deflate=True)
            new_doc.close()
            return True
            
        except Exception as e:
            print(f"–ì—Ä–µ—à–∫–∞ –ø—Ä–∏ OCR: {e}")
            return False

    def translate_pdf(self, input_path, output_path, pages_to_process=None):
        """–ì–ª–∞–≤–Ω–∞ —Ñ—É–Ω–∫—Ü–∏—è –∑–∞ –ø—Ä–µ–≤–æ–¥"""
        if not os.path.exists(input_path):
            return False
        
        if self.detect_text_method(input_path):
            return self.translate_pdf_with_text_layer(input_path, output_path, pages_to_process)
        else:
            return self.translate_pdf_with_ocr(input_path, output_path, pages_to_process)


def main():
    """–ì–ª–∞–≤–Ω–∞ —Ñ—É–Ω–∫—Ü–∏—è"""
    print("\n" + "="*70)
    print("AUTOCAD PDF –ü–†–ï–í–û–î–ê–ß")
    print("="*70)
    
    # –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –Ω–∞ –ª–æ–∫–∞–ª–Ω–∏ –ø—ä—Ç–∏—â–∞
    poppler_path = setup_local_paths()
    
    # ========================================================================
    # –ò–ó–ë–û–† –ù–ê –ï–ó–ò–¶–ò
    # ========================================================================
    print("\n" + "="*70)
    print("–ò–ó–ë–û–† –ù–ê –ï–ó–ò–¶–ò")
    print("="*70)
    
    languages = {
        '1': ('bg', 'en', '–ë—ä–ª–≥–∞—Ä—Å–∫–∏ ‚Üí English'),
        '2': ('en', 'bg', 'English ‚Üí –ë—ä–ª–≥–∞—Ä—Å–∫–∏'),
        '3': ('bg', 'ru', '–ë—ä–ª–≥–∞—Ä—Å–∫–∏ ‚Üí –†—É—Å—Å–∫–∏–π'),
        '4': ('ru', 'bg', '–†—É—Å—Å–∫–∏–π ‚Üí –ë—ä–ª–≥–∞—Ä—Å–∫–∏'),
        '5': ('en', 'de', 'English ‚Üí Deutsch'),
        '6': ('en', 'fr', 'English ‚Üí Fran√ßais'),
        '7': ('bg', 'de', '–ë—ä–ª–≥–∞—Ä—Å–∫–∏ ‚Üí Deutsch'),
    }
    
    print("\n–ù–∞–π-—á–µ—Å—Ç–∏ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏:")
    for key, (src, tgt, desc) in languages.items():
        print(f"  {key}. {desc}")
    print(f"  8. –î—Ä—É–≥–∞ –∫–æ–º–±–∏–Ω–∞—Ü–∏—è")
    
    lang_choice = input("\nüëâ –ò–∑–±–æ—Ä (–ø–æ –ø–æ–¥—Ä–∞–∑–±–∏—Ä–∞–Ω–µ 1): ").strip()
    
    if not lang_choice or lang_choice == '1':
        source_lang, target_lang = 'bg', 'en'
    elif lang_choice in languages:
        source_lang, target_lang = languages[lang_choice][0], languages[lang_choice][1]
    elif lang_choice == '8':
        source_lang = input("  –û—Ç –µ–∑–∏–∫ (bg): ").strip().lower() or 'bg'
        target_lang = input("  –ù–∞ –µ–∑–∏–∫ (en): ").strip().lower() or 'en'
    else:
        source_lang, target_lang = 'bg', 'en'
    
    print(f"\n‚úì –ò–∑–±—Ä–∞–Ω–∏ –µ–∑–∏—Ü–∏: {source_lang} ‚Üí {target_lang}")
    
    # ========================================================================
    # –ò–ó–ë–û–† –ù–ê PDF –§–ê–ô–õ
    # ========================================================================
    pdf_files = [f for f in os.listdir('.') if f.endswith('.pdf') and not f.endswith('_TR.pdf')]
    
    if not pdf_files:
        print("\n‚ùå –ù—è–º–∞ PDF —Ñ–∞–π–ª–æ–≤–µ.")
        return
    
    print(f"\nüìÅ –ù–∞–º–µ—Ä–µ–Ω–∏ PDF —Ñ–∞–π–ª–æ–≤–µ:")
    for i, f in enumerate(pdf_files, 1):
        size_mb = os.path.getsize(f) / (1024 * 1024)
        print(f"  {i}. {f} ({size_mb:.2f} MB)")
    
    choice = input("\nüëâ –ò–∑–±–µ—Ä–µ—Ç–µ —Ñ–∞–π–ª ‚Ññ: ").strip()
    input_file = pdf_files[int(choice) - 1] if choice else pdf_files[0]
    
    # ========================================================================
    # –ò–ó–ë–û–† –ù–ê –°–¢–†–ê–ù–ò–¶–ò
    # ========================================================================
    doc = fitz.open(input_file)
    total = len(doc)
    doc.close()
    
    print(f"\nüìÑ –û–±—â–æ —Å—Ç—Ä–∞–Ω–∏—Ü–∏: {total}")
    print("–û–ø—Ü–∏–∏:")
    print("  ‚Ä¢ Enter - –≤—Å–∏—á–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü–∏")
    print("  ‚Ä¢ '5' - —Å–∞–º–æ —Å—Ç—Ä–∞–Ω–∏—Ü–∞ 5")
    print("  ‚Ä¢ '1-10' - —Å—Ç—Ä–∞–Ω–∏—Ü–∏ –æ—Ç 1 –¥–æ 10")
    
    pages_input = input(f"\nüëâ –°—Ç—Ä–∞–Ω–∏—Ü–∏ (Enter –∑–∞ –≤—Å–∏—á–∫–∏): ").strip()
    pages_to_process = None
    
    if pages_input:
        try:
            if '-' in pages_input:
                start, end = map(int, pages_input.split('-'))
                pages_to_process = list(range(start - 1, end))
            else:
                pages_to_process = [int(pages_input) - 1]
        except:
            print("‚ö†Ô∏è  –ù–µ–≤–∞–ª–∏–¥–µ–Ω —Ñ–æ—Ä–º–∞—Ç, —â–µ —Å–µ –ø—Ä–µ–≤–µ–¥–∞—Ç –≤—Å–∏—á–∫–∏ —Å—Ç—Ä–∞–Ω–∏—Ü–∏")
            pages_to_process = None
    
    # ========================================================================
    # –ò–ú–ï –ù–ê –ò–ó–•–û–î–ù–ò–Ø –§–ê–ô–õ
    # ========================================================================
    suffix_map = {
        'en': '_EN',
        'bg': '_BG',
        'ru': '_RU',
        'de': '_DE',
        'fr': '_FR',
    }
    suffix = suffix_map.get(target_lang, '_TR')
    output_file = input_file.replace(".pdf", f"{suffix}.pdf")
    
    print(f"\nüìù –ò–∑—Ö–æ–¥–µ–Ω —Ñ–∞–π–ª: {output_file}")
    
    # ========================================================================
    # –ü–†–ï–í–û–î
    # ========================================================================
    translator = AutoCADPDFTranslator(
        source_lang=source_lang,
        target_lang=target_lang,
        poppler_path=poppler_path
    )
    
    if translator.translate_pdf(input_file, output_file, pages_to_process):
        print(f"\n{'='*70}")
        print(f"‚úÖ –£–°–ü–ï–•! –§–∞–π–ª—ä—Ç –µ —Å—ä–∑–¥–∞–¥–µ–Ω:")
        print(f"   {os.path.abspath(output_file)}")
        print(f"{'='*70}")
        print(f"\nüìä –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞:")
        print(f"  ‚Ä¢ –ü—Ä–µ–≤–µ–¥–µ–Ω–∏ —Ñ—Ä–∞–∑–∏: {len(translator.cache)}")
        if pages_to_process:
            print(f"  ‚Ä¢ –ü—Ä–µ–≤–µ–¥–µ–Ω–∏ —Å—Ç—Ä–∞–Ω–∏—Ü–∏: {len(pages_to_process)}")
    else:
        print("\n‚ùå –§–∞–π–ª—ä—Ç –Ω–µ –±–µ—à–µ —Å—ä–∑–¥–∞–¥–µ–Ω –ø–æ—Ä–∞–¥–∏ –≥—Ä–µ—à–∫–∞.")


if __name__ == "__main__":
    main()
